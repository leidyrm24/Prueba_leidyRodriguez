@model Web_Front_Leidy.Models.CITY

<h1> @ViewBag.titulo</h1>
<div class="row">
    <div class="col-md-4">
        <form asp-action="@ViewBag.titulo">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CODE" class="control-label"></label>
                <input asp-for="CODE" class="form-control" readonly="readonly" />
                <span asp-validation-for="CODE" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DESCRIPCTION" class="control-label"></label>
                <input asp-for="DESCRIPCTION" class="form-control" />
                <span asp-validation-for="DESCRIPCTION" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Grabar" class="btn btn-primary" />
                <input type="submit" value="Eliminar" class="btn btn-primary" />

                <a asp-action="Index" class="btn btn-primary">Retornar</a>

            </div>
        </form>
    </div>
</div>
<div>
    @ViewBag.mensaje
</div>
<br />
<br />
<div>
    <!--agregar la vista parcial-->
    @Html.Partial("Listado", (List<Web_Front_Leidy.Models.CITY>)ViewBag.citys)
</div>
